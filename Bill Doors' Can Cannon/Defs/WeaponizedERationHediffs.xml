        <painOffset>0.1</painOffset>
        <vomitMtbDays>1</vomitMtbDays>
        <capMods>
          <li>
            <capacity>Metabolism</capacity>
            <offset>-0.1</offset>
          </li>
        </capMods>
      </li>

      <li>
        <minSeverity>0.4</minSeverity>
        <label>moderate</label>
        <painOffset>0.15</painOffset>
        <vomitMtbDays>0.5</vomitMtbDays>
        <statOffsets>
          <Flammability>0.35</Flammability>
        </statOffsets>
        <capMods>
          <li>
            <capacity>Metabolism</capacity>
            <offset>-0.4</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.10</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.10</offset>
          </li>
        </capMods>
      </li>

      <li>
        <minSeverity>0.7</minSeverity>
        <label>severe</label>
        <vomitMtbDays>0.2</vomitMtbDays>
        <painOffset>0.6</painOffset>
        <statOffsets>
          <Flammability>0.5</Flammability>
        </statOffsets>
        <capMods>
          <li>
            <capacity>Metabolism</capacity>
            <offset>-0.4</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.15</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.15</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.8</minSeverity>
        <label>dangerous</label>
        <lifeThreatening>true</lifeThreatening>
        <painOffset>0.9</painOffset>
        <vomitMtbDays>0.1</vomitMtbDays>
        <statOffsets>
          <Flammability>0.8</Flammability>
        </statOffsets>
        <capMods>
          <li>
            <capacity>Metabolism</capacity>
            <offset>-0.8</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.25</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.25</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>

  <ThoughtDef>
    <defName>AteIncCan</defName>
    <durationDays>1</durationDays>
    <stages>
      <li>
        <label>ate incendiary can</label>
        <description>Darn, why this meal smells like chemfuel? And what's in that vial? Is that sauce or prometh------</description>
        <baseMoodEffect>-15</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

